#!/usr/bin/env groovy

pipeline {
    agent any

    parameters {
        choice(name: 'ACTION', choices: ['apply', 'destroy'], description: 'Terraform action')
        choice(name: 'ENV', choices: ['dev', 'test'], description: 'Environment to deploy')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Deploy') {
            steps {
                dir('terraform/infra') {
                    sh """
                        echo "Initializing Terraform"
                        terraform init -backend-config="key=infra/eu-central-1/${params.ENV}/terraform.tfstate" -input=false -force-copy

                        if [ "${params.ACTION}" = "apply" ]; then
                            terraform plan -var="env=${params.ENV}" -input=false -out=tfplan
                            terraform apply -var="env=${params.ENV}" -input=false -auto-approve tfplan
                        else
                            terraform destroy -var="env=${params.ENV}" -input=false -auto-approve
                        fi
                    """
                }
            }
        }
    }
}